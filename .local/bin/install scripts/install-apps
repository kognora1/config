#!/bin/sh
APPS="xorg-xinit xorg-server libxinerama libxft libx11 webkit2gtk telegram-desktop piper mpv yt-dlp sxiv neovim keepassxc lxappearance qt5ct sxhkd pcmanfm pavucontrol feh fzf picom zathura zathura-pdf-poppler git firefox pamixer polkit-gnome dunst htop progress xarchiver udiskie gvfs file-roller xf86-video-amdgpu zsh spotify-launcher xsel clipnotify blueberry" 

pacman -Syuu
pacman -S --needed -y $APPS
cp -rf ~/.local/share/themes/Catppuccin-Frappe-Blue /usr/share/themes
mv ~/.local/bin/install\ scripts/50-mouse-acceleration.conf /etc/X11/xorg.conf.d/50-mouse-acceleration.conf
mv ~/.local/bin/install\ scripts/00-keyboard.conf /etc/X11/xorg.conf.d/00-keyboard.conf
